#!/bin/bash
cat "$1" | sed \
	-e 's/ =>/:/g' \
	-e 's/;//g' \
	-e 's/function //g' \
	-e 's/[$]this->/@/g' \
	-e 's/[$]//g' \
	-e 's/" [.]/" +/g' \
	-e 's/"[.]/" +/g' \
	-e 's/[.] "/ + "/g' \
	-e 's/[.]"/ + "/g' \
	-e "s/' [.]/' +/g" \
	-e "s/'[.]/' +/g" \
	-e "s/[.] '/ + '/g" \
	-e "s/[.]'/ + '/g" \
	-e 's/<?php//g' \
	-e 's/?>$//g' \
	-e 's/->/./g' \
	-e 's/ \\/ /g'


